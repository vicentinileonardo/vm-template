{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "vmName",
    "cpu",
    "memory"
  ],
  "properties": {
    "vmName": {
      "type": [
        "string"
      ],
      "title": "Name of the VM",
      "default": "test-vm"
    },
    "cpu": {
      "type": [
        "integer"
      ],
      "title": "Number of CPU cores",
      "default": "1"
    },
    "memory": {
      "type": [
        "integer"
      ],
      "title": "Number of GB of RAM",
      "default": "2"
    },
    "provider": {
      "type": [
        "string"
      ],
      "enum": [
        "azure",
        "aws",
        "gcp"
      ],
      "title": "Public cloud provider"
    },
    "schedulingTime": {
      "type": [
        "string"
      ],
      "title": "Scheduling Time for the VM"
    },
    "schedulingLocation": {
      "type": [
        "string"
      ],
      "title": "Scheduling Location for the VM"
    }
  }
}