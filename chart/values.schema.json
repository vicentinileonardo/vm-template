{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "vmName",
    "namespace",
    "cpu",
    "memory",
    "provider",
    "schedulingTime",
    "schedulingLocation"
  ],
  "properties": {
    "vmName": {
      "type": [
        "string"
      ],
      "title": "Name of the VM",
      "default": "my-test-virtual-machine-greenops"
    },
    "namespace": {
      "type": [
        "string"
      ],
      "title": "Namespace for VM resources",
      "default": "greenops"
    },
    "cpu": {
      "type": [
        "number"
      ],
      "title": "Number of CPU cores",
      "default": "1"
    },
    "memory": {
      "type": [
        "number"
      ],
      "title": "Number of GB of RAM",
      "default": "2"
    },
    "provider": {
      "type": [
        "string"
      ],
      "enum": [
        "azure",
        "aws",
        "gcp"
      ],
      "title": "Public cloud provider",
      "default": "azure"
    },
    "schedulingTime": {
      "type": [
        "string"
      ],
      "title": "Scheduling Time for the VM",
      "default": "2024-11-01T00:00:00Z"
    },
    "schedulingLocation": {
      "type": [
        "string"
      ],
      "title": "Scheduling Location for the VM",
      "default": "italynorth"
    }
  }
}